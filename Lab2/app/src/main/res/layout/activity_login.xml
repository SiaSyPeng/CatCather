<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <com.google.android.flexbox.FlexboxLayout
    android:id="@+id/log_in_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:flexDirection="column"
    app:alignItems="flex_start"
    app:alignContent="stretch"
    app:flexWrap="nowrap"
    android:background="@color/LGreen"
    android:clickable="true"
    android:focusable="true"
        >
    <ImageView
        android:layout_width="match_parent"
        android:contentDescription="@string/login_picture_description"
        android:layout_height="270dp"
        android:src="@drawable/login_cat"
        android:scaleType="fitCenter"
        android:padding="20dp"
        app:layout_alignSelf="center"
        app:layout_flexShrink="1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:textColor="@color/Black"
        android:text="@string/login_username"
        />
    <EditText
        android:id="@+id/login_username"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:backgroundTint="@color/DPink"
        android:textColor="@color/Black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/login_pass"
        android:textColor="@color/Black"
        />
    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:singleLine="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"
        android:backgroundTint="@color/DPink"
        android:textColor="@color/Black"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_login_button"
            android:background="@color/LPink"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_centerInParent="true"
            android:onClick="login"
            />
        <TextView
            android:id="@+id/account_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_signup"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/Black"
            android:onClick="toSignupPage"
            />
    </RelativeLayout>
    </com.google.android.flexbox.FlexboxLayout>
</ScrollView>